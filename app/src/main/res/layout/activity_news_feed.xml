<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e1e1"
    tools:context="com.browser.codedady.NewsFeedActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarNewsFeed"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </android.support.v7.widget.Toolbar>

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/viewPagerTab"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/toolbarNewsFeed"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="4dp"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorWithoutPadding="true"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorColor="#4F4F4F"
        app:stl_indicatorThickness="4dp"
        app:stl_indicatorWidth="auto"
        app:stl_indicatorCornerRadius="2dp"
        app:stl_overlineColor="#4D000000"
        app:stl_overlineThickness="0dp"
        app:stl_underlineColor="@color/colorPrimary"
        app:stl_underlineThickness="1dp"
        app:stl_dividerColor="#4D000000"
        app:stl_dividerThickness="1dp"
        app:stl_defaultTabBackground="?attr/selectableItemBackground"
        app:stl_defaultTabTextAllCaps="true"
        app:stl_defaultTabTextColor="#FC000000"
        app:stl_defaultTabTextSize="13sp"
        app:stl_defaultTabTextHorizontalPadding="16dp"
        app:stl_defaultTabTextMinWidth="0dp"
        app:stl_distributeEvenly="true"
        app:stl_clickable="true"
        app:stl_titleOffset="24dp"
        app:stl_drawDecorationAfterTab="false"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/viewPagerTab" />


    <RelativeLayout
        android:background="#e1e1e1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bottomBarNewsFeed"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:layout_marginTop="10dp"
            android:id="@+id/backNewsFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_toStartOf="@+id/frontNewsFeed"
            android:src="@drawable/back_button"
            android:background="?android:selectableItemBackground"
            android:clickable="true"/>

        <ImageButton
            android:id="@+id/frontNewsFeed"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/menuNewsFeed"
            android:layout_marginEnd="40dp"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/forward_button"
            android:clickable="true"/>

        <ImageButton
            android:id="@+id/menuNewsFeed"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_tab"
            android:background="?android:selectableItemBackground"
            android:clickable="true"/>

        <ImageButton
            android:id="@+id/bookmarkFinalNewsFeed"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@+id/menuNewsFeed"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_bookmark"
            android:background="?android:selectableItemBackground"
            android:clickable="true"/>

        <ImageButton
            android:id="@+id/tabsNewsFeed"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/ic_tabs"
            android:layout_toEndOf="@+id/bookmarkFinalNewsFeed"
            android:layout_centerVertical="true"
            android:background="?android:selectableItemBackground"
            android:clickable="true" />


    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/menuContentCardNewsFeed"
        android:layout_above="@+id/bottomBarNewsFeed"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/boxLay1NewsFeed"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/downloadCardBoxNewsFeed"
                    android:src="@drawable/ic_file_download_black_24dp"
                    android:layout_marginStart="80dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/downloadTextNewsFeed"
                    android:textSize="15sp"
                    android:text="Downloads"
                    android:layout_toEndOf="@id/downloadCardBoxNewsFeed"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:id="@+id/ruleCardBoxNewsFeed"
                android:layout_below="@+id/boxLay1NewsFeed"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>

            <RelativeLayout
                android:id="@+id/boxLay2NewsFeed"
                android:layout_below="@+id/ruleCardBoxNewsFeed"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/closeCardBoxNewsFeed"
                    android:src="@drawable/ic_close_black_24dp"
                    android:layout_marginStart="80dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/exitTextNewsFeed"
                    android:textSize="15sp"
                    android:text="Exit"
                    android:layout_marginStart="10dp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/closeCardBoxNewsFeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
